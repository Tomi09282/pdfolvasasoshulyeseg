<Window x:Class="pdfolvasasoshulyeseg.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pdfolvasasoshulyeseg"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="pageCountLabel" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"/>
        <Button Content="Load PDF" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,30,0,0" Click="LoadFileButton_Click"/>
        <DataGrid x:Name="errorDataGrid" AutoGenerateColumns="True" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="10,70,10,10"/>
    </Grid>
</Window>
